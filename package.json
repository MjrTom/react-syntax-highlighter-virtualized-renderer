{
  "name": "react-syntax-highlighter-virtualized-renderer",
  "version": "1.1.0",
  "description": "a virtualized custom renderer for react syntax highlighter",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist/cjs/index.js",
    "dist/esm/index.js",
    "src/index.js"
  ],
  "scripts": {
    "build:esm": "babel src --out-dir dist/esm",
    "build:cjs": "babel src --out-dir dist/cjs --plugins @babel/plugin-transform-modules-commonjs",
    "build": "run-p build:*",
    "prepublish": "npm run build"
  },
  "keywords": [
    "react",
    "syntax-highlighting",
    "react-syntax-highlighter",
    "highlight.js",
    "react-virtualized"
  ],
  "author": "Conor Hastings",
  "license": "MIT",
  "dependencies": {
    "react-virtualized": "9.22.6"
  },
  "devDependencies": {
    "@babel/cli": "7.27.0",
    "@babel/core": "7.26.10",
    "@babel/preset-env": "7.26.9",
    "@babel/preset-react": "7.26.3",
    "eslint": "9.29.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "npm-run-all": "4.1.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-syntax-highlighter": "15.6.1"
  },
  "peerDependencies": {
    "react": ">=16.12.0",
    "react-dom": ">=16.12.0",
    "react-syntax-highlighter": ">=12.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/conorhastings/react-syntax-highlighter-virtualized-renderer.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --fix"
  }
}
